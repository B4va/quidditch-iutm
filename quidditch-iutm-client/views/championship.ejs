<% layout('./_layout') -%>

<h1 class="text-center"><%= championshipName %></h1>

<table class="table mt-4">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Equipe</th>
        <th scope="col">Points</th>
    </tr>
    </thead>
    <tbody>
<% for (let i = 0 ; i=< teams.length; i++) { %>
    <tr>
        <th scope="row"><%= i + 1 %></th>
        <td><a href="/teams/<%= teams[i].id %>"><%= teams[i].name %></a></td>
        <td><%= teams[i].points %></td>
    </tr>
<% } %>
    </tbody>
</table>

<div class="mt-4">
    <a href="/championships/<%= id %>/matches" class="btn btn-outline-primary">Voir les matchs</a>
</div>
